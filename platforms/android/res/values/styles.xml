<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar_bg_color</item>
        <item name="colorPrimaryDark">@color/bar_bg_color</item>
        <item name="colorAccent">@color/bar_bg_color</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="main_tab_bottom_image">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="main_tab_bottom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>