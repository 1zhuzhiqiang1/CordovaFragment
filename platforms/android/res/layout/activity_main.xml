<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_tab_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/main_tab_square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/main_tab_square_inside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_image_1"
                    style="@style/main_tab_bottom_image"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/tab_text_1"
                    style="@style/main_tab_bottom_text"
                    android:layout_below="@+id/tab_image_1"
                    android:text="广场" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/main_tab_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/main_tab_discover_inside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_image_2"
                    style="@style/main_tab_bottom_image"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/tab_text_2"
                    style="@style/main_tab_bottom_text"
                    android:layout_below="@id/tab_image_2"
                    android:text="发现" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_tab_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/main_tab_activity_inside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_image_3"
                    style="@style/main_tab_bottom_image"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/tab_text_3"
                    style="@style/main_tab_bottom_text"
                    android:layout_below="@id/tab_image_3"
                    android:text="活动" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/main_tab_mine_inside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_image_4"
                    style="@style/main_tab_bottom_image"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/tab_text_4"
                    style="@style/main_tab_bottom_text"
                    android:layout_below="@id/tab_image_4"
                    android:text="我的" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/main_tab_group"
        android:background="@android:color/darker_gray"></View>

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_line"
        android:layout_weight="1"
        android:orientation="vertical"></FrameLayout>

</RelativeLayout>
